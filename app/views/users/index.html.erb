<div>
    <div class="container px-5 px-sm-0">
        <div class="row">
            <!--lefside-->
            <%= render 'books/user', user: current_user, n_book: @n_book %>
            <!--rightside-->
            <div class="col-md-8 offset-md-1">
                <h2>Users</h2>
                <p><%= link_to "グループを作成する", new_group_path %>|<%= link_to "グループ一覧", groups_path %></p>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="scope">image</th>
                            <th class="scope">name</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <th>
                                <a href="<%= user_path(user.id) %>">
                                <%= image_tag user.get_profile_image(100, 100) %><br>
                                </a>
                            </th>
                            <td><%= user.name %></td>
                            <td>フォロー数: <%= link_to  user.following.count, following_path(user.id) %></td>
                            <td>フォロワー数: <%= link_to  user.followers.count, followers_path(user.id) %></td>
                            <td>
                                <div class="follow-btn" id="follow-btn-<%= user.id %>">
                                    <%= render "relationships/follow_btn", user: user %>
                                </div>
                            </td>
                            <td><%= link_to "Show", user_path(user.id) %></td>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
            </div>    
        </div>
    </div>
</div>
