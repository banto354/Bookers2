<div>
    <div class="container px-5 px-sm-0">
        <div class="row">
            <!--lefside-->
            <%= render 'books/user', user: @user, n_book: @n_book %>
            <!--rightside-->
            <div class="col-md-8 offset-md-1">
                <h2>Users</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="scope">image</th>
                            <th class="scope">name</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <th>
                                <a href="<%= user_path(user.id) %>">
                                <%= image_tag user.get_profile_image(100, 100) %><br>
                                </a>
                            </th>
                            <td><%= user.name %></td>
                            <td>フォロー数: <%= link_to  user.following.count, following_path(user.id) %></td>
                            <td>フォロワー数: <%= link_to  user.followers.count, followers_path(user.id) %></td>
                            <td>
                                <% if user.id != current_user.id %>
                                    <% if user.followed_by?(current_user) %>
                                        <%= link_to "unfollow", user_relationships_path(user.id), class: "btn btn-block btn-success", method: :delete %>
                                    <% else %>
                                        <%= link_to "Follow", user_relationships_path(user.id), class: "btn btn-block btn-primary", method: :post %>
                                    <% end %>
                                <% end %>
                            </td>
                            <td><%= link_to "Show", user_path(user.id) %></td>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
            </div>    
        </div>
    </div>
</div>
