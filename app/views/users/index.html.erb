<div>
    <div class="container px-5 px-sm-0">
        <div class="row">
            <!--lefside-->
            <%= render 'books/user', user: @user, n_book: @n_book %>
            <!--rightside-->
            <div class="col-md-8 offset-md-1">
                <h2>Users</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th class="scope">image</th>
                            <th class="scope">name</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <th><%= image_tag user.get_profile_image(100, 100) %></th>
                            <td><%= user.name %></td>
                            <td>フォロー数: <%= user.following.count %></td>
                            <td>フォロワー数: <%= user.followers.count %></td>
                            <td>
                            <% if user != current_user %>
                                <%= link_to "unfollow", user_relationships_path(user.id), method: :destroy %>
                            <% else %>
                                <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
                            <% end %>
                            </td>
                            <td><%= link_to "Show", user_path(user.id) %></td>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
            </div>    
        </div>
    </div>
</div>
