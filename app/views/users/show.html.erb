<div>
    <div class="container px-5 px-sm-0">
        <div class="row">
            <!--lefside-->
            <%= render 'books/user', user: @user, n_book: @n_book %>
            <!--rightside-->
            <div class="col-md-8 offset-md-1">
                <h2>Books</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th> </th>
                            <th class="scope">Title</th>
                            <th class="scope">Opinion</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @books.each do |book| %>
                        
                            <!--book detail-->
                            <%= render 'books/detail', book: book %>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
            </div>    
        </div>
    </div>
</div>
