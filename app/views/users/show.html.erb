<div>
    <div class="container px-5 px-sm-0">
        <div class="row">
            <!--lefside-->
            <%= render 'books/user', user: @user, n_book: @n_book %>
            <!--rightside-->
            <div class="col-md-8 offset-md-1">
                <h2>Books</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th> </th>
                            <th class="scope">Title</th>
                            <th class="scope">Opinion</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @books.each do |book| %>
                        
                            <!--book detail-->
                            <%= render 'books/detail', book: book %>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
                <h4>投稿数の前日比/前週比</h4>
                <!--前日比-->
                <table class="table table-bordered">
                    <thead>
                        <th>6日前</th>
                        <th>5日前</th>
                        <th>4日前</th>
                        <th>3日前</th>
                        <th>2日前</th>
                        <th>1日前</th>
                        <th>今日</th>
                    </thead>
                    <tbody>
                        <% @books_count.each do |book_count| %>
                            <td><%= book_count[:count] %></td>
                        <% end %>
                    </tbody>
                </table>
                <!--前週比-->
                <table class="table">
                    <thead>
                        <th>今週の投稿数</th>
                        <th>前週の投稿数</th>
                        <th>前週比</th>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>    
        </div>
    </div>
</div>
