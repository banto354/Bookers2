<div class="col-md-8 offset-md-1">
    <h2>Following Users</h2>
    <table class="table">
        <thead>
            <tr>
                <th class="scope">image</th>
                <th class="scope">name</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        <% @following.each do |user| %>
            <tr>
                <th><%= image_tag user.get_profile_image(100, 100) %></th>
                <td><%= user.name %></td>
                <td>フォロー数: <%= user.following.count %></td>
                <td>フォロワー数: <%= user.followers.count %></td>
                <td>
                    <% if user.id != current_user.id %>
                        <% if user.followed_by?(current_user) %>
                            <%= link_to "unfollow", user_relationships_path(user.id), method: :delete %>
                        <% else %>
                            <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
                        <% end %>
                    <% end %>
                </td>
                <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
        </tbody>
        <% end %>
    </table>
</div>    
