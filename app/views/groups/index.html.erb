<div>
    <div class="container px-5 px-sm-0">
        <div class="row">
            <!--lefside-->
            <%= render 'books/user', user: @user, n_book: @n_book %>
            <!--rightside-->
            <div class="col-md-8 offset-md-1">
                <h2>Groups</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="scope"></th>
                            <th class="scope">グループ名</th>
                            <th>紹介文</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @groups.each do |group| %>
                        <tr>
                            <th>
                                <a href="<%= group_path(group.id) %>">
                                <%= image_tag user.get_group_image(100, 100) %><br>
                                </a>
                            </th>
                            <td><%= group.name %></td>
                            <td><%= group.introduction %></td>
                            <td></td>
                            <td></td>
                            <td><%= link_to "Show", user_path(user.id) %></td>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
            </div>    
        </div>
    </div>
</div>
