<div class="container col-5">
<h2>Update Group</h2>
    <%= form_with model: @group do |f| %>
        <div class="form-group">
            <label>グループ名</label>
            <%= f.text_field :name, class:"form-control" %>
        </div>
         <div class="form-group">
            <label>紹介文</label>
            <%= f.text_area :introduction, class:"form-control" %>
        </div>
        <div>
            <%= f.file_field :group_image, accept:"image/*", class: "w-100" %>
        </div>
        <br>
        <div class="form-group">
            <%= f.submit 'Update Group', class:"btn btn-success" %>
        </div>
    <% end %>
</div>